{
  "env": {
    "browser": false,
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/extensions": [".js", ".ts"],
    "import/parsers": { "@typescript-eslint/parser": [".ts"] },
    "import/resolver": { "node": { "extensions": [".js", ".ts"] } }
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ]
  }
}
